{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "cleanUrls": true,
  "trailingSlash": true,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "env": {
    "NEXT_PUBLIC_TEMPLATE_ID": "001",
    "NEXT_PUBLIC_API_URL": "https://django-backend.onrender.com"
  },
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  }
}